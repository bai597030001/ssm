<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http:www//mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--mapper为根元素，namespace指定了命名空间-->
<mapper namespace="com.sample.ssm.mapper.ResourceMapper">
    <select id="getResource" resultType="com.sample.ssm.model.Resource">
        SELECT * FROM resource
    </select>
    <select id="getResourceById" parameterType="long" resultType="com.sample.ssm.model.Resource">
        SELECT * FROM resource where id = #{id}
    </select>
</mapper>
